
<center>
    <h1>Product Listing </h1>

    <table> 
        <th>Title</th>
        <th>Total orders</th>
        <th colspan='3'>Actions</th>
        <% @products.each do |product| %>
    <tr>
        <td><%= product.title %></td>
        <td><%= product.orders.count %></td>
        <td><%= button_to "Show", product_path(product), method: :get%></td>
        <td><%= button_to "Edit", edit_product_path(product), method: :get%></td>
        <td><%= button_to "Delete", product_path(product), method: :delete%></td>
    </tr>
    <% end %>
    </table>
</center>

<center>
    <div>
        <%= link_to "new product", new_product_path, method: :get %>
    </div>

    <div>
        <%= link_to "Default scopped product", products_default_scoped_path, method: :get %>
    </div>
</center>

