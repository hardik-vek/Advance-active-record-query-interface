
<center>

    <table> 
        <th>Title</th>
        <th>Description</th>
        <th>Price</th>
        <th>Capacity</th>
        <th>Is_active</th>
        <th>Status</th>
        <th colspan=3 >Actions</th>

        <tr>
            <td><%= @product.title %></td>
            <td><%= @product.description %></td>
            <td><%= @product.price %></td>
            <td><%= @product.capacity %></td>
            <td><%= @product.is_active %></td>
            <td><%= @product.status %></td>
            <td><%= button_to "Edit", edit_product_path(@product), method: :get %></td>
            <td><%= button_to "Delete", product_path(@product), method: :delete %></td>
            <td><%= button_to "back", products_path, method: :get %></td>
        </tr>

    </table>

</center>


 