
<center>

    <table> 
        <th>Product Title</th>
        <th>Quantity</th>
        <th>Total Price</th>
        <th>Status</th>
        <th>Customer name</th>
        <th>Customer email</th>
        <th>Customer phone number</th>
        <th colspan=3 >Actions</th>

        <tr>
            <td><%= @order.product.title %></td>
            <td><%= @order.quantity %></td>
            <td><%= @order.quantity * @order.product.price %></td>
            <td><%= @order.status %></td>
            <td><%= @order.customer.fname + " " +@order.customer.lname %></td>
            <td><%= @order.customer.email %></td>
            <td><%= @order.customer.phone_number %></td>
            <td><%= button_to "Edit", edit_order_path(@order), method: :get %></td>
            <td><%= button_to "Delete", order_path(@order), method: :delete %></td>
            <td><%= button_to "back", orders_path, method: :get %></td>
        </tr>

    </table>

</center>
